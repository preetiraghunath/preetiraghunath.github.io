<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - {{ site.author }}</title>

    <!-- Base CSS -->
    <link rel="stylesheet" href="{{ '/assets/css/style.css' | url }}">

    <!-- Page-specific CSS -->
    {% if roleType %}
    <link rel="stylesheet" href="{{ '/assets/css/role-pages.css' | url }}">
    {% else %}
    <link rel="stylesheet" href="{{ '/assets/css/homepage.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/tiles.css' | url }}">
    {% endif %}

    <!-- Modal CSS -->
    <link rel="stylesheet" href="{{ '/assets/css/modal.css' | url }}">

    <!-- SPA JavaScript Module -->
    <script type="module" src="{{ '/assets/js/app.js' | url }}"></script>
</head>
<body>
    {{ content | safe }}
</body>
</html>
